<div class="container pt-5">
  <div class="row pt-5"></div>
  <div class="row mx-auto">
    <div class="col"><h3><b>Create Post</b></h3><br></div>
    <div class="col">
      <div class="list-group float-right">
        <a href="/posts" class="text-danger font-weight-bold list-group-item list-group-item-danger">< Back</a>
      </div>
    </div> </div>

    <div class="d-flex justify-content-center">
      <% if @post.errors.any? %>
        <h6><b>The following errors prevented the post from being submitted:</b></h6> </div>
        <div class="d-flex justify-content-center">
          <% @post.errors.full_messages.each do |msg| %>
          <div class="text-danger"><ul><%= msg %></ul></div>
        <% end %>
      <% end %>
      <br>
      <br>
      </div>

  <div class="d-flex justify-content-center">
      <div class="row">
      <%= form_with scope: :post, url: posts_path, local: true do |f| %>
        <br>
        <b>Title</b><br>
        <%= f.text_field :title %>
        <br>
        <b>Body</b><br>
        <%= f.text_area :body %>
        <br><br>
        <%= f.submit %>

      <% end %>
      </div>
    </div>
  </div>

