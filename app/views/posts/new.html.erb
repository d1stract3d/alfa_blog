<div class="container pt-5">
  <div class="row pt-5"></div>
  <div class="row mx-auto">
    <div class="col-12"><h3><b>Create Post</b></h3><br></div>
    <div class="col-10">

      <% if @post.errors.any? %>
        <h6><b>The following errors prevented the post from being submitted:</b></h6>
        <% @post.errors.full_messages.each do |msg| %>
            <div class="text-danger"><%= msg %></div>
        <% end %>
      <% end %>
<br>


      <%= form_with scope: :post, url: posts_path, local: true do |f| %>

        <form>
          <div class="form-group">
            <label for="title">Title</label><br>
            <%= f.text_field :title %>
          </div>
          <div class="form-group">
            <label for="body">Body</label><br>
            <%= f.text_area :body %>
          </div>
          <%= f.submit %>
        </form>

      <% end %>

    </div>
    <div class="col-auto">
      <div class="list-group">
        <a href="/" class="text-danger font-weight-bold list-group-item list-group-item-danger">< Home</a>
      </div>
    </div>
  </div>
</div>
