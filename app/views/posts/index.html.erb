<div class="container pt-5">
  <div class="row pt-5"></div>
  <div class="row mx-auto">
    <div class="col-10">
      <h4><b> Posts </b></h4>
      <br>
      <div class="container">
        <table>
          <% @posts.each do |post| %>
            <tr>
              <th><br>
                <b> <%= post.title %> </b>
              </th>
            </tr>
            <tr>
              <td>
                <%= post.body[0..33] %>...
              </td>
              <td>
                &nbsp; (placeholder) <br>
              </td>
          <% end %>
          </tr>
        </table>
      </div>
    </div>
    <div class="col-auto">
      <div class="list-group">
        <a href="/" class="text-danger font-weight-bold list-group-item list-group-item-danger">< Home</a>
      </div>
    </div>
  </div>
</div>
