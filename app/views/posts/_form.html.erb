<div class="d-flex justify-content-center">
  <% if @post.errors.any? %>
    <h6><b>The following errors prevented the post from being submitted:</b></h6>
    <% @post.errors.full_messages.each do |msg| %>
      <div class="text-danger"><%= msg %></div>
    <% end %>
  <% end %>
  <br>
</div>

<div class="d-flex justify-content-center">
  <div class="row">
    <%= form_with(model: @post, local: true) do |f| %>
      <b>Title</b><br>
      <%= f.text_field :title %>
      <br><br>
      <b>Body</b><br>
      <%= f.text_area :body %>
      <br><br>
      <%= f.submit :class => 'btn btn-outline-success' %>

    <% end %>
  </div>
  <br> <br>

</div>
</div>

